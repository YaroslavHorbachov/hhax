{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hhax/data-access-api": ["libs/data-access-api/src/index.ts"],
      "@hhax/feature-patient": ["libs/feature-patient/src/index.ts"],
      "@hhax/feature-search": ["libs/feature-search/src/index.ts"],
      "@hhax/ui-components": ["libs/ui-components/src/index.ts"],
      "@hhax/util-auth": ["libs/util-auth/src/index.ts"],
      "@hhax/util-env": ["libs/util-env/src/index.ts"],
      "@hhax/util-formatters": ["libs/util-formatters/src/index.ts"],
      "@hhax/util-ngrx": ["libs/util-ngrx/src/index.ts"],
      "@hhax/util-shared": ["libs/util-shared/src/index.ts"],
      "@hhax/util-testing": ["libs/util-testing/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
